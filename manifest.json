{
  "manifest_version": 3,
  "name": "React Chrome Extension",
  "version": "1.0.0",
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "512": "images/icon512.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "js/index.html",
    "default_title": "React Chrome Extension"
  }
}
